# Environment variables for AI Diagnostic and Prescription System

# Node environment
NODE_ENV=development

# Server configuration
PORT=3000

# Database configuration
DATABASE_URI=mongodb://localhost:27017/ai-diagnostic

# JWT configuration
JWT_SECRET=your-ultra-secure-and-ultra-long-secret-key-for-jwt-token
JWT_EXPIRES_IN=90d
JWT_COOKIE_EXPIRES_IN=90

# Email configuration (for password reset)
EMAIL_USERNAME=your-email@example.com
EMAIL_PASSWORD=your-email-password
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587

# API keys for external services
OPENAI_API_KEY=your-openai-api-key

# Security
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=3600000 # 1 hour in milliseconds

# Logging
LOG_LEVEL=debug